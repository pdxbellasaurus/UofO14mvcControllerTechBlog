<div class="card-content">
    <div class="media">

      <div class="media-content">
       <p>
<a href="/posts/{{id}}" class="title is-4">{{title}}</a>
       </p> 
        <p class="subtitle is-6">{{user.name}}</p>
      </div>
    </div>
{{!-- if statement then partial for the homepage? --}}
    <div class="content">
      {{post_body}}

    </div>

    <footer class="card-footer">
      <p class="card-footer-item">
        <span>
          <time datetime="2016-1-1">{{format_date date_created}}</time>
        </span>
      </p>
      <p class="card-footer-item">
        <span class="icon has-text-success">
          <i class="fas fa-comment-alt">
            {{comments.length}}
          </i>
        </span>
      </p>
    </footer>
  </div>
</div>